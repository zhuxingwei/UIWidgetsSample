   public class Tutorial : UIWidgetsSamplePanel {
       protected override Widget createWidget() {
           return null;
       }

       protected override void OnEnable() {
            base.OnEnable();
            FontManager.instance.addFont(Resources.Load<Font>("MaterialIcons-Regular"), "Material Icons");
        }
   }
}



